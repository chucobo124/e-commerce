<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Product Id</th>
      <th>SKU</th>
      <th>Variant Name</th>
      <th>Count on hand</th>
      <th>State</th>
      <th>Visible</th>
      <th>Is Default</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <%@variants.each do |variant|%>
      <%next if variant.product.blank?%>
      <tr>
        <td><%= variant.id%></td>
        <td><%= variant.product.id%></td>
        <td><%= variant.sku%></td>
        <td><%= variant.name%></td>
        <td><%= variant.count_on_hand%></td>
        <td><%= variant.state%></td>
        <td><%= variant.visible%></td>
        <td><%= variant.is_default%></td>
        <td><%= variant.created_at.strftime("%b-%d-%Y")%></td>
        <td><%= variant.updated_at.strftime("%b-%d-%Y")%></td>
        <td><%= button_to "Edit", edit_admin_product_variant_path(id: variant.id, product_id: variant.product.id), method: 'get',class: 'btn btn-outline-primary'%></td>
        <td><%= button_to "Destroy", admin_product_variant_path(id: variant.id, product_id: variant.product.id), method: 'delete',class: 'btn btn-outline-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
